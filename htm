    <script>
        const ctx = document.getElementById('courseSplitChart').getContext('2d');
        const courseSplitChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Teoria', 'Pr√°tica'],
                datasets: [{
                    label: 'Distribui√ß√£o do Curso',
                    data: [50, 50],
                    backgroundColor: [
                        'rgba(100, 255, 218, 0.7)',
                        'rgba(51, 161, 242, 0.7)'
                    ],
                    borderColor: [
                        '#64FFDA',
                        '#33A1F2'
                    ],
                    borderWidth: 2,
                    hoverOffset: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '70%',
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: '#CCD6F6',
                            font: {
                                size: 14
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                if (Array.isArray(label)) {
                                  return label.join(' ');
                                } else {
                                  return label;
                                }
                            }
                        }
                    }
                }
            }
        });
    </script>
